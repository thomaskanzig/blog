{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 mx-auto">
                <article class="blog-detail">
                    <header>
                        {% if post.title is not empty %}
                            <h1 class="blog-detail-title">{{ post.title }}</h1>
                        {% endif %}
                        <div class="media author mb-4">
                            {% if post.user.urlAvatar is not empty %}
                                <img src="{{ asset(post.user.urlAvatar)|imagine_filter('50x50') }}"
                                     class="mr-3 author-photo rounded-circle"
                                     alt="{{ post.user.fullname }}">
                            {% endif %}

                            <div class="media-body">
                                <h5 class="mt-2 mb-1 author-fullname">{{ post.user.fullname }}</h5>
                                {% if post.created is not empty %}
                                    <div class="author-date-post">{{ 'app.general.published_in'|trans }} {{ post.published|date("Y/m/d") }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </header>

                    <div class="text ckeditor">
                        {% if post.text is not empty %}
                            {{ post.text|raw }}
                        {% endif %}
                    </div>

                    {% include 'includes/comments-facebook.html.twig' %}
                </article>
            </div>

            <div class="col-lg-12 show-more-content my-4">
                <div class="row">
                    {% for i in 0..2 %}
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-stretched-link-limited">
                                    <img src="https://dummyimage.com/600x400/000/fff"
                                         class="card-img-top"
                                         alt="...">
                                    <div class="card-body px-0">
                                        <h4 class="card-title">
                                            Card title
                                        </h4>
                                        <a href="#" class="badge badge-pill badge-light stretched-link">
                                            Read more
                                        </a>
                                    </div>
                                </div>

                                <div class="media">
                                    <img src="https://dummyimage.com/50x50/a6a6a6/ffffff"
                                         class="rounded-circle mr-3"
                                         alt="...">
                                    <div class="media-body">
                                        <h6 class="my-0">Thomas KÃ¤nzig</h6>
                                        <small class="text-black-50">Sep 12, 23:00pm</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
{% endblock %}
