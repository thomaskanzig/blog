{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 mx-auto">
                <article class="blog-detail">
                    <header>
                        {% if post.title is not empty %}
                            <h1 class="blog-detail-title">{{ post.title }}</h1>
                        {% endif %}
                        <div class="media author mb-4">
                            {% if post.user.urlAvatar is not empty %}
                                <img src="{{ asset(post.user.urlAvatar)|imagine_filter('50x50') }}"
                                     class="mr-3 author-photo rounded-circle"
                                     alt="{{ post.user.fullname }}">
                            {% endif %}

                            <div class="media-body">
                                <h5 class="mt-2 mb-1 author-fullname">{{ post.user.fullname }}</h5>
                                {% if post.created is not empty %}
                                    <div class="author-date-post">{{ 'app.general.published_in'|trans }} {{ post.published|date("Y/m/d") }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </header>

                    <div class="text ckeditor">
                        {% if post.text is not empty %}
                            {{ post.text|raw }}
                        {% endif %}
                    </div>

                    {% include 'includes/comments-facebook.html.twig' %}
                </article>
            </div>
        </div>
    </div>

    {% if posts %}
        <div class="show-more-content pt-5">
            <div class="container">
                <h5 class="show-more-content-title font-weight-bolder mb-4 pb-3">
                    {{ 'app.general.read_more'|trans }}
                </h5>

                <div class="row">
                    {% for post in posts %}
                        <div class="col-md-4 col-lg-4 mb-5">
                            <div class="card">
                                <div class="card-stretched-link-limited">
                                    <a href="{{ path('post_detail', {slug: post.slug}) }}" class="stretched-link"></a>

                                    {% if post.image is not empty %}
                                        <div class="card-img-wrapper">
                                            <img src="{{ asset(post.image)|imagine_filter('600x375') }}"
                                                 class="card-img-top"
                                                 alt="{{ post.title }}">
                                        </div>
                                    {% endif %}

                                    <div class="card-body px-0">
                                        <h4 class="card-title my-0">
                                            {{ post.title }}
                                        </h4>
                                    </div>
                                </div>

                                <div class="media">
                                    <img src="{{ asset(post.userAvatar)|imagine_filter('40x40') }}"
                                         class="rounded-circle mr-3"
                                         alt="{{ post.userName }}">

                                    <div class="media-body author-body">
                                        <h6 class="mt-0 mb-1 font-weight-normal">
                                            {{ post.userName }}
                                        </h6>

                                        <div class="d-flex">
                                            <small class="text-black-50 author-post-created">
                                                {{ post.created|date("M n, Y") }}
                                            </small>

                                            <small class="text-black-50 author-post-created author-post-time">
                                                {{ post.created|date("h:i a") }}
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
{% endblock %}
