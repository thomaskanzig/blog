{% extends 'admin.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ 'admin.categories.edit_category'|trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_pages_index') }}"><i class="fa fa-home"></i> {{ 'admin.index'|trans }}</a></li>
            <li><a href="{{ path('admin_category_index') }}">{{ 'admin.categories'|trans }}</a></li>
            <li class="active">{{ 'admin.action.edit'|trans }}</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'app.general.basic_information'|trans }}</h3>
                    </div>

                    {{ form_start(categoryForm) }}
                        <div class="box-body">
                            {{ form_row(categoryForm.name) }}
                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">{{ 'admin.categories.form.button.save_category'|trans }}</button>
                        </div>
                    {{ form_end(categoryForm) }}
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
{% endblock %}