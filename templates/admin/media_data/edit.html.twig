{% extends 'admin.html.twig' %}

{% block headerNavbar %}
    <li>
        <a href="{{ path('admin_pages_index') }}">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> <span>General</span>
        </a>
    </li>

    <li class="active">
        <a href="{{ path('admin_media_data_edit', { id: mediaDataForm.vars.data.media.id }) }}">
            <i class="fa fa-file-text-o" aria-hidden="true"></i> <span>Data</span>
        </a>
    </li>
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ 'admin.data_medias.edit_data'|trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_pages_index') }}"><i class="fa fa-home"></i> {{ 'admin.index'|trans }}</a></li>
            <li><a href="{{ path('admin_media_index') }}">{{ 'admin.medias'|trans }}</a></li>
            <li class="active">{{ 'admin.data_medias.edit_data'|trans }}</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <div class="box box-primary">
                    {% if 'image' == mediaDataForm.vars.data.media.type.slug and
                        mediaDataForm.vars.data.media.file is not empty
                    %}
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'app.general.image'|trans }}</h3>
                    </div>

                    <div class="box-body">
                        <img src="{{ asset(mediaDataForm.vars.data.media.file)|imagine_filter('480x480') }}"
                             class="img-responsive"
                             alt="">
                    </div>
                    {% endif %}
                </div>
                <!-- /.box -->
            </div>

            <div class="col-md-8">
                {{ form_start(mediaDataForm) }}
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">{{ 'app.general.basic_information'|trans }}</h3>
                        </div>

                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form_row(mediaDataForm.title) }}
                                </div>

                                <div class="col-md-12">
                                    {{ form_row(mediaDataForm.description) }}
                                </div>
                            </div>
                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">{{ 'admin.data_medias.form.button.save_data'|trans }}</button>
                        </div>
                    </div>
                {{ form_end(mediaDataForm) }}
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
{% endblock %}
